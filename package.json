{
  "name": "@t8/blank-app",
  "version": "0.1.13",
  "private": true,
  "description": "",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "webapp-build src/public",
    "dev": "npm-run-all dev-init init-entries dev-watch",
    "dev-init": "webapp-build src/public --init --clean",
    "dev-rebuild": "webapp-build src/public --skip-init",
    "dev-watch": "nodemon --watch src -e * --ignore **/public/** --exec \"cross-env NODE_ENV=development npm-run-all dev-rebuild serve\"",
    "init-entries": "node dist/entries/init.js",
    "preversion": "npm run typecheck",
    "prod": "cross-env NODE_ENV=production APP_HOST=127.0.0.1 APP_PORT=3000 npm-run-all prod-build init-entries serve",
    "prod-build": "webapp-build src/public --clean --silent",
    "serve": "node dist/server/index.js",
    "start": "npm run dev",
    "typecheck": "tsc --noEmit"
  },
  "author": "axtk",
  "license": "ISC",
  "dependencies": {
    "@t8/webapp-core": "^0.1.1",
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@t8/webapp-build": "^0.1.5",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "cross-env": "^10.0.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  }
}
